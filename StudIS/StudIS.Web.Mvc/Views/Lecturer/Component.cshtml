@model IEnumerable<StudIS.Web.Mvc.Models.ComponentViewModel>

<h1>@ViewBag.Title</h1>

<table class="table">
    <tr>
        <th>
            Ime kolegija
        </th>
        <th>
            Bodovi
        </th>
        <th>
            Prag
        </th>
        <th></th>
        <th></th>
    </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaximumPoints)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MinimumPointsToPass)
            </td>
            <td>
                @Html.ActionLink("Uredi", "EditComponent", new { id = item.Id }, new { @class = "list-group-item" })
            </td>
            <td>
                @Html.ActionLink("Obriši", "DeleteComponent", new { id = item.Id }, new { @class = "list-group-item" })
            </td>
        </tr>
    }

</table>

<p>
    @Html.ActionLink("Dodaj novu komponentu", "CreateComponent", new { id = ViewBag.Id }, new { @class = "btn btn-info" })
</p>
